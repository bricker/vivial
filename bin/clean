#!/usr/bin/env -S bash -eu

set -eu

find "$EAVE_HOME" \( -path ./.venv -o -path ./vendor \) -prune -o -type d -path ./.pytest_cache -exec rm -rf {} \;
find "$EAVE_HOME" \( -path ./.venv -o -path ./vendor \) -prune -o -type d -path ./.ruff_cache -exec rm -rf {} \;
find "$EAVE_HOME" \( -path ./.venv -o -path ./vendor \) -prune -o -type d -path ./.mypy_cache -exec rm -rf {} \;
find "$EAVE_HOME" \( -path ./.venv -o -path ./vendor \) -prune -o -type d -path ./__pycache__ -exec rm -rf {} \;