#!/usr/bin/env bash

set -eu

source ${EAVE_HOME}/develop/python/functions.bash
python-validate-version
python-activate-venv

configfile=${EAVE_HOME}/develop/python/pyproject.toml

statusmsg -i "(lint) isort..."
python -m isort --settings-file=$configfile --check .

statusmsg -i "(lint) black..."
python -m black --config=$configfile --check .

statusmsg -i  "(lint) mypy..."
python -m mypy --config-file=${EAVE_HOME}/develop/python/pyproject.toml .

statusmsg -s "Linting passed âœ”"