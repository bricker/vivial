#!/usr/bin/env bash

set -euo pipefail

source "${EAVE_HOME}"/develop/functions.bash

function main () (
	local project="$1"
	local itemid="$2"
	local fieldid="$3"

	cd "$(e.parentpath)/projects/$project"

	if test -f ".auto.tfvars"; then
		local backup
		backup="/tmp/.auto.tfvars.$(date +%s)"
		mv .auto.tfvars "$backup"
		echo "Backup moved to $backup"
	fi

	echo "{{ op://$itemid/$fieldid}}" | op inject -o .auto.tfvars
)

main "$@"