#!/usr/bin/env bash

# app server must be running to run cypress tests against
npm run start-headless > /dev/null &
react_server_pid=$!

# allow script CLI args as cypress args.
npm run cy:test -- "$@"

# cleanup bg processes for running headless server
kill $react_server_pid
for node_pid in $(pgrep -x node)
do
	kill "$node_pid"
done
