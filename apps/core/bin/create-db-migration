#!/usr/bin/env bash

set -eu

source ${EAVE_HOME}/develop/functions.bash

function create-db-migration() (
	local usage="Usage: create-db-migration [-m migration-name]"
	local message=""

	while getopts "m:h" argname
	do
		case "$argname" in
			m) message=$OPTARG ;;
			h)
				echo $usage
				exit 0
				;;
		esac
	done

	run-with-dotenv python -m alembic revision --message "$message" --autogenerate
)

create-db-migration "$@"