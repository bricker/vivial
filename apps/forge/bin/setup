#!/usr/bin/env bash

set -eu

source ${EAVE_HOME}/develop/functions.bash

${EAVE_HOME}/develop/javascript/bin/setup
${EAVE_HOME}/develop/shared/bin/build-dotenv src/config.ts

npm i -g yalc
npm i -g @forge/cli

# https://community.developer.atlassian.com/t/error-err-ngrok-120-ngrok-version-not-supported-when-attempting-to-run-tunnel/69488/11
npm i -g @forge/sandbox-tunnel@3.0.12-next.6

bin/lint

statusmsg -s "To authenticate with the Forge CLI, run 'forge login' and follow the prompts."
