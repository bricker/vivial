#!/usr/bin/env bash

set -eu

source "${EAVE_HOME}"/develop/functions.bash

(
	trap 'kill 0' SIGINT

	python-activate-venv
	node-activate-venv
	cd "$(e.parentpath)"

	python ./bin/src/start-dev-server.py &
	bash ./bin/src/start-dev-webpack.bash &
	bash ./bin/src/start-dev-graphql-codegen.bash &
	wait
)
