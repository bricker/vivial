#!/usr/bin/env -S PYTHONPATH=. python

import os
EAVE_HOME = os.environ["EAVE_HOME"]

from dotenv import load_dotenv  # noqa: E402

load_dotenv(dotenv_path=os.path.join(EAVE_HOME, "develop/shared/share.env"), override=True)
load_dotenv(dotenv_path=os.path.join(EAVE_HOME, ".env"), override=True)
load_dotenv(dotenv_path=os.path.join(EAVE_HOME, ".eavefyi-dev.env"), override=True)

from eave.marketing.app import app  # noqa: E402

if __name__ == "__main__":
    app.run(
        port=5000,
        use_debugger=False,
        use_reloader=True,
        extra_files=[
            os.path.join(EAVE_HOME, "libs/eave-stdlib-py"),
        ],
        exclude_patterns=[
            ".*",
            "**/build/",
        ],
    )
