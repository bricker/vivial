{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: http://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Core API",
      "consoleTitle": "Core API",
      "cwd": "${workspaceFolder}/apps/core",
      "type": "python",
      "request": "launch",
      "program": "bin/src/start-dev-server.py",
      "justMyCode": false,
    },
    {
      "name": "Dashboard (Server)",
      "consoleTitle": "Dashboard (Server)",
      "cwd": "${workspaceFolder}/apps/dashboard",
      "type": "python",
      "request": "launch",
      "program": "bin/src/start-dev-server.py",
      "jinja": true,
      "justMyCode": false,
    },
    {
      "name": "Dashboard (Webpack)",
      "consoleTitle": "Dashboard (Webpack)",
      "cwd": "${workspaceFolder}/apps/dashboard",
      "type": "node",
      "request": "launch",
      "program": "./node_modules/.bin/webpack",
      "args": [
        "-w"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Dashboard (GraphQL Codegen)",
      "consoleTitle": "Dashboard (GraphQL Codegen)",
      "cwd": "${workspaceFolder}/apps/dashboard",
      "type": "node",
      "request": "launch",
      "program": "./node_modules/.bin/graphql-codegen",
      "args": [
        "--config codegen.ts",
        "--overwrite",
        "--watch",
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Admin (Server)",
      "consoleTitle": "Admin (Server)",
      "cwd": "${workspaceFolder}/apps/admin",
      "type": "python",
      "request": "launch",
      "program": "bin/src/start-dev-server.py",
      "jinja": true,
      "justMyCode": false,
    },
    {
      "name": "Admin (Webpack)",
      "consoleTitle": "Admin (Webpack)",
      "cwd": "${workspaceFolder}/apps/admin",
      "type": "node",
      "request": "launch",
      "program": "./node_modules/.bin/webpack",
      "args": [
        "-w"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Admin (GraphQL Codegen)",
      "consoleTitle": "Admin (GraphQL Codegen)",
      "cwd": "${workspaceFolder}/apps/admin",
      "type": "node",
      "request": "launch",
      "program": "./node_modules/.bin/graphql-codegen",
      "args": [
        "--config codegen.ts",
        "--overwrite",
        "--watch",
      ],
      "console": "integratedTerminal"
    },
  ],
  "compounds": [
    {
      "name": "Dashboard",
      "configurations": [
        "Dashboard (Server)",
        "Dashboard (Webpack)",
        "Dashboard (GraphQL Codegen)",
      ],
      "stopAll": true
    },
    {
      "name": "Core API + Dashboard",
      "configurations": [
        "Core API",
        "Dashboard (Server)",
        "Dashboard (Webpack)",
        "Dashboard (GraphQL Codegen)",
      ],
      "stopAll": true
    },
    {
      "name": "Admin",
      "configurations": [
        "Admin (Server)",
        "Admin (Webpack)",
        "Admin (GraphQL Codegen)",
      ],
      "stopAll": true
    },
    {
      "name": "Core API + Admin",
      "configurations": [
        "Core API",
        "Admin (Server)",
        "Admin (Webpack)",
        "Admin (GraphQL Codegen)",
      ],
      "stopAll": true
    },
  ]
}