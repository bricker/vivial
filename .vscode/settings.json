{
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "files.associations": {
    "*.html.jinja": "jinja-html"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true
  },
  "files.trimFinalNewlines": false,
  "files.insertFinalNewline": false,
  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
  },
  "[shellscript]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 2,
    "files.eol": "\n"
  },
  "[javascript]": {
    "editor.tabSize": 2,
  },
  "[json]": {
    "editor.tabSize": 2,
  },
  "[yaml]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "yaml.schemas": {
    "https://json.schemastore.org/github-action": ["action.yml"],
    "https://json.schemastore.org/github-workflow": ".github/workflows/*.yml",
  },
  "graphql-config.load.rootDir": "${workspaceFolder}/apps/github",
  "graphql-config.dotEnvPath": "${workspaceFolder}/.env",
  "eslint.experimental.useFlatConfig": false,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.validate": [
    "javascript",
    "graphql",
  ],
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.inlayHints.enumMemberValues.enabled": false,
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.parameterTypes.enabled": false,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "prompt",
  "javascript.inlayHints.enumMemberValues.enabled": false,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": false,
  "javascript.inlayHints.parameterNames.enabled": "none",
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,
  "python.formatting.provider": "black",
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--show-column-numbers",
    "--no-pretty",
    "--follow-imports=silent",
    "--config-file=${workspaceFolder}/develop/python/pyproject.toml"
  ],
  "python.linting.mypyEnabled": true,
  "python.linting.enabled": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.extraPaths": [
    "vendor",
    "${workspaceFolder}/libs/eave-stdlib-py/src",
    "${workspaceFolder}/libs/eave-pubsub-schemas/python/src",
    "${workspaceFolder}/apps/core",
    "${workspaceFolder}/apps/slack",
    "${workspaceFolder}/apps/marketing",
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "${workspaceFolder}",
    "-p",
    "*test.py"
  ],
  "git.openRepositoryInParentFolders": "always",
  "python.formatting.blackArgs": [
    "--config=${workspaceFolder}/develop/python/pyproject.toml"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.testing.pytestArgs": [
    "-c=${workspaceFolder}/develop/python/pyproject.toml"
  ],
  "python.analysis.exclude": [
    "**/node_modules",
    "**/__pycache__",
    ".git",
    ".venv",
    "**/vendor",
    "**/.mypy_cache",
    "**/generated",
    "**/build"
  ],
  "python.analysis.importFormat": "absolute",
  "python.autoComplete.extraPaths": [
  ],
  "python.analysis.inlayHints.pytestParameters": true,
  "ruff.args": [
    "--config=${EAVE_HOME}/develop/python/pyproject.toml"
  ],
}