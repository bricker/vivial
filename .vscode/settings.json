{
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "files.associations": {
    "*.html.jinja": "jinja-html"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true
  },
  "files.trimFinalNewlines": false,
  "files.insertFinalNewline": false,
  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
  },
  "[shellscript]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 2,
    "files.eol": "\n"
  },
  "[javascript]": {
    "editor.tabSize": 2,
  },
  "[json]": {
    "editor.tabSize": 2,
  },
  "[yaml]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "yaml.schemas": {
    "https://json.schemastore.org/github-action": ["action.yml"],
    "https://json.schemastore.org/github-workflow": ".github/workflows/*.yml",
  },
  // FIXME: These should use relative paths. It wasn't working with relative paths when I tried.
  "graphql-config.load.rootDir": "${workspaceFolder}/apps/github",
  "graphql-config.dotEnvPath": "${workspaceFolder}/.env",
  "eslint.experimental.useFlatConfig": false,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.validate": [
    "javascript",
    "graphql",
  ],
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "prompt",
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,
  "python.formatting.provider": "black",
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--show-column-numbers",
    "--no-pretty",
    "--follow-imports=silent",
    "--config-file=${workspaceFolder}/develop/python/pyproject.toml"
  ],
  "python.linting.mypyEnabled": true,
  "python.linting.enabled": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.extraPaths": [
    "vendor"
  ],
  "python.testing.unittestEnabled": true,
  "python.testing.pytestEnabled": false,
  "python.testing.unittestArgs": [
    "-v",
    "-t",
    ".",
    "-s",
    ".",
    "-p",
    "*_test.py"
  ],
  "git.openRepositoryInParentFolders": "always",
  "python.formatting.blackArgs": [
    "--config=${workspaceFolder}/develop/python/pyproject.toml"
  ],
  "python.analysis.autoImportCompletions": true,
}